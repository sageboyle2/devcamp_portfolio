<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Raleway" rel="stylesheet">
    
    <meta name="keywords" content="<%= @seo_keywords %>" />
    
    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
      <%= render 'shared/blog_nav' %>
      <%= render 'shared/blog_masthead' %>
      
          <div class="container">
        
            <div class="row">
      
                  <!--<% if current_user.is_a?(User) %>-->
                  <!--  <%= link_to "Logout", destroy_user_session_path, method: :delete %>-->
                  <!--   <%= link_to "Edit User", edit_user_registration_path %>-->
                  <% else %>
                    <%= link_to "Register", new_user_registration_path %>
                    <%= link_to "Login", new_user_session_path %>
                   
                  <% end %>
                  
                <%= yield %>
                
                <%= render "shared/blog_sidebar" %>
                
                <%= render 'shared/blog_footer' %>
                    
                <%= alerts %>

                
                </div>
              
           <%= source_helper("blog") %> 
      
     </div>
  </body>
</html>
